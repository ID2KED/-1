using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp3
{
    internal class Program
    {
        static void Main(string[] args)
        {   int summ=0;
            int multiplication=1;
            int line = 3;
            int column = 5;
            int minimumNumber = 0;
            int maximumNumber = 9;
            int lineToCount = 1;
            int columnToCount = 0;

            int[,] array = new int[line, column];
            Random rand = new Random();

            for (int numberForLine = 0; numberForLine < array.GetLength(0); numberForLine++)
            {
                for (int numberForColumn = 0; numberForColumn < array.GetLength(1); numberForColumn++)
                {
                    array[numberForLine, numberForColumn] = rand.Next(minimumNumber, maximumNumber);
                    Console.Write(array[numberForLine, numberForColumn] + " ");
                    
                    if (numberForLine == lineToCount)
                    {
                        summ += array[numberForLine, numberForColumn];                        
                    }

                    if (numberForColumn == columnToCount) 
                    { multiplication *= array[numberForLine, numberForColumn]; }
                }
                Console.WriteLine();
            }
            Console.WriteLine("\nСумма: " + summ);
            Console.WriteLine("\nПроизведение: " + multiplication);
        }
    }
}
