using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp3
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int sum;
            int multiplication;
            int line = 3;
            int column = 5;
            int minimumNumber = 0;
            int maximumNumber = 9;

            int[,] array = new int[line, column];
            Random rand = new Random();

            for (int numberForLine = 0; numberForLine < array.GetLength(0); numberForLine++)
            {
                for (int numberForColumn = 0; numberForColumn < array.GetLength(1); numberForColumn++)
                {
                    array[numberForLine, numberForColumn] = rand.Next(minimumNumber, maximumNumber);
                    Console.Write(array[numberForLine, numberForColumn] + " ");
                }
                Console.WriteLine();
            }
           
            sum = array[line=1, 0] + array[line = 1, 1] + array[line = 1, 2] + array[line = 1, 3] + array[line = 1, 4];
            Console.WriteLine("\nСумма второй строки: "+sum );

            multiplication = array[0, 0] * array[1, 0] * array[2, 0];
            Console.WriteLine("\nПроизведение первого столбца: " + multiplication+"\n");
        }
    }
}
