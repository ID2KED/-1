using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSlight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int number;
            int itog=0;
            
            Random rand = new Random();
            number = rand.Next(0, 100);
           
            Console.WriteLine("Вот случайное число, от которого мы будем считать: "+number);

            for (int lowerNumber=1; lowerNumber<=number; lowerNumber++) 
            {
                if (lowerNumber % 3 == 0||lowerNumber%5==0)
                {
                    Console.WriteLine("кратное число " +lowerNumber);
                    itog += lowerNumber;
                    Console.WriteLine("сумма чисел равна "+itog);
                }
                
            }
            
        }

    }
}
