using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSlight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string name; 
            string surname;
            string change;

            name = "Kondratenko";
            surname = "Irina";
            Console.WriteLine("Ваше имя " + name + ", Ваша фамилия " + surname);

            change = name;
            name = surname;
            surname = change;
            Console.WriteLine("Ваше имя " + name + ", Ваша фамилия " + surname);
        }

    }
}
 
